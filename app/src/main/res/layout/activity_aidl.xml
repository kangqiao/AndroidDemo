<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/startBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定远端服务"/>


    <Button
        android:id="@+id/btn_unbind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解除绑定远端服务"/>

    <EditText
        android:id="@+id/codeEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:hint="Code"/>

    <EditText
        android:id="@+id/nameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你好"
        android:hint="名字"/>

    <Button
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加"/>

    <Button
        android:id="@+id/getBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询"/>

    <Button
        android:id="@+id/btn_messenger_bind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交换远端Messenger"/>


    <Button
        android:id="@+id/btn_messenger_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="向远端Messenger发送消息"/>

    <Button
        android:id="@+id/btn_messenger_unbind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除绑定远端Messenger"/>

    <TextView
        android:id="@+id/studentListText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>