<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_postSyncBarrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="插入同步屏障"/>

    <Button
        android:id="@+id/btn_removeSyncBarrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="移除同步屏障"/>

    <Button
        android:id="@+id/btn_postSyncMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="插入普通消息"/>

    <Button
        android:id="@+id/btn_postAsynMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="插入异步消息"/>
    <Button
        android:id="@+id/btn_frame_choreographer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="监听帧率 Choreographer"/>
</LinearLayout>